{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "sourceMap": true,
		"baseUrl": ".",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "outDir": "./dist",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
